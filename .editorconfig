# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

[*.{py,conf}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.{js,json,yaml,yml}]
indent_style = space
indent_size = 2

[Dockerfile]
indent_style = space
indent_size = 2

[*.go]
indent_style = tab
indent_size = 2
